<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Навигационная панель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@color/nav_bar_background"
            android:padding="8dp">

            <!-- Логотип компании -->
            <ImageView
                android:id="@+id/logo_dubai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_company_logo"
                android:contentDescription="Логотип компании" />

            <!-- Кнопки навигации -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оформленпие тура"
                android:background="@null"
                android:layout_marginStart="80dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/selected_tour_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выбранный тур"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Окно с названием выбранного города -->
            <TextView
                android:id="@+id/selected_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textSize="16sp"
                android:text="Название города" />

            <!-- Поле для ввода комментариев -->
            <EditText
                android:id="@+id/user_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите почту"
                android:layout_marginTop="16dp" />

            <!-- Кнопка оформить тур -->
            <Button
                android:id="@+id/confirm_tour_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оформить тур"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
